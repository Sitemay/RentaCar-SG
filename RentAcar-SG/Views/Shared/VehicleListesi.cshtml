@model IEnumerable<RentAcar_SG.Models.VehicleModel>




@if (Model.Count() == 0)
{
    <div class="alert alert-warning">
        <span class="glyphicon glyphicon-info-sign"></span>
        <strong>Kayıt Bulunamadı.</strong>
    </div>
}
else
{

    foreach (var vehicle in Model)
    {
        <hr />
        <h3 class="page-header">
            @vehicle.AracAdi
            @vehicle.ModelAdi
        </h3>
        <p>
            <span class="glyphicon glypicon-time"></span>
            @vehicle.ModelYili
        </p>
        <img class="img-responsive" src="@vehicle.Resim" width="350" height="250" alt="" />
        <hr />
        @Html.ActionLink("Detaylı İncele", "Details", "Vehicle", new { id = vehicle.Id }, new { @class = "btn btn-primary" })
    }
}



